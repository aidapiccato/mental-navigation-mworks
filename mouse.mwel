var pointer_x = 0
var pointer_y = 0

mouse_input pointer (
    mouse_position_x = pointer_x
    mouse_position_y = pointer_y
    hide_cursor = NO
)

%define reset_pointer_position (x_position, y_position)
    move_mouse_cursor (
        device = pointer
        x_position = x_position
        y_position = y_position
    )
%end
